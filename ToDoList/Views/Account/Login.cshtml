@model ToDoList.Services.ViewModels.User.LoginUserViewModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<h2>Выполните вход</h2>
<form method="post" asp-action="Login" asp-antiforgery="true">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label" asp-for="Email"></label>
        <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Email">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label for="inputPassword5" class="form-label" asp-for="Password"></label>
        <input type="password" id="inputPassword5" class="form-control" asp-for="Password">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary">Войти</button>
        <a asp-controller="Account" asp-action="Register">У меня нет аккаунта</a>
    </div>
</form>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
